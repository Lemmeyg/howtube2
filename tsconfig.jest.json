{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "isolatedModules": false,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.js",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 